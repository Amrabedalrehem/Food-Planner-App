<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E6">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_orange_header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sign in to continue"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="com.example.foodplanner.ui.auth.SignInFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"

        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="-80dp"

        tools:layout_height="250dp" />

    <TextView
        android:id="@+id/tvContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="──────  or continue with  ──────"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerView2" />

    <LinearLayout
        android:id="@+id/socialLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContinue">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/google"
            android:padding="16dp"
            android:id="@+id/btnGoogle"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة جوجل" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/facebook"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة فيسبوك" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/twiter"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة تويتر" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuest"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_guest_button"
        android:text="Continue as Guest"
        android:textAllCaps="false"
        app:iconTint="@color/primaryColor"
         app:iconTintMode="src_in"
        android:drawableTintMode="src_in"
        android:drawableStart="@drawable/persongeust"
        android:drawablePadding="12dp"
        android:paddingStart="80dp"
        android:paddingEnd="60dp"
        android:gravity="center_vertical|start"
        android:textColor="#FF6D00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialLayout" />
    <TextView
        android:id="@+id/descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Guest users can browse meals but cannot save favorites or weekly plans"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuest" />

</androidx.constraintlayout.widget.ConstraintLayout>