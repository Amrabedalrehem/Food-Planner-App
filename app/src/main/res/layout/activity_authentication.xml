<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E6">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_orange_header"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textTitle"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSubTitle"
            android:layout_marginTop="20dp"
            android:text="Sign in to continue"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-110dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_sign_in" />

     <TextView
        android:id="@+id/tvContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="──────  or continue with  ──────"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/socialLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/google"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة جوجل" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/facebook"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة فيسبوك" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_social_button"
            android:src="@drawable/twiter"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="تسجيل بواسطة تويتر" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuest"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_guest_button"
        android:text="Continue as Guest"
        android:textAllCaps="false"
        android:drawableStart="@drawable/persongeust"
        android:drawablePadding="12dp"
        android:paddingStart="80dp"
        android:paddingEnd="60dp"
        android:gravity="center_vertical|start"
        android:textColor="#FF6D00"
        app:layout_constraintTop_toBottomOf="@id/socialLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Guest users can browse meals but cannot save favorites or weekly plans"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnGuest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
